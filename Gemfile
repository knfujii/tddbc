# A sample Gemfile
source "https://rubygems.org"

# gem "rails"

group :development do
  # irb拡張
  gem 'wirble'
end

group :development, :test do
  # RSpec
  gem 'rspec', '>= 2.0.0.beta.22'
  gem 'fuubar' # RSpecフォーマッター
  gem 'capybara'
  gem 'launchy'

  # 自動テスト
  gem 'guard-rspec'
  gem 'growl'
  gem 'libnotify'
end
